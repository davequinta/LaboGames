<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quintanilla00025815.labogames">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GamesActivity"
            android:label="@string/title_activity_games"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TabbedGames"
            android:label="@string/title_activity_tabbed_games"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LogReg.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LogReg.Register"
            android:label="Register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LogReg.SuccessActivity"
            android:label="SuccesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.quintanilla00025815.noticias.noticias.NoticiasPrincipal"
            android:label="News"/>
        <activity
            android:name="com.quintanilla00025815.noticias.noticias.News"
            android:label="News"/>


    </application>

</manifest>
